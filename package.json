{
  "name": "nowjs-core",
  "description": "NowCanDo Javascript Core [nowjs-core] is a  library written by TypeScript code maintains under Apache 2.0 licence",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "debug": "npm run-script build:debug ",
    "build:debug": "npm run-script clean:dist && tsc --p ./tsconfig.debug.json",
    "build:release": "npm run-script clean:build && tsc --p ./tsconfig.release.json",
    "clean": "npm run clean:dist",
    "clean:dist": "rm -rf ./dist/*",
    "clean:build": "rm -rf ./lib/*",
    "test": " jest  --no-cache  ",
    "test:watch": "jest --watch",
    "coverage": " jest  --no-cache --coverage  ",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'"
  },
  "main": "lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "author": "Saeed Tabrizi at NowCanDo.Com",
  "email": "dev at NowCanDo.Com",
  "license": "Apache-2.0",
  "keywords": [
    "nowjs",
    "nowjscore",
    "nowjs-core",
    "nowcando",
    "Saeed Tabrizi",
    "Typescript",
    "light weight",
    "library",
    "LOB",
    "line of business"
  ],
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.test.json",
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "verbose": true,
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "bugs": {
    "url": "https://github.com/nowcando/nowjs-core/issues"
  },
  "homepage": "https://github.com/nowcando/nowjs-core#readme",
  "typescript": {
    "definition": "dist/src/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nowcando/nowjs-core.git"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "@types/nodeunit": "0.0.30",
    "full-icu": "^1.1.3",
    "jest": "^18.1.0",
    "jest-environment-node-debug": "^2.0.0",
    "jest-environment-node-debug-fixed": "^1.0.0",
    "nodeunit": "^0.9.1",
    "ts-jest": "^18.0.3",
    "ts-node": "^3.2.1",
    "typescript": "^2.1.6"
  }
}
